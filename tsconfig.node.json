{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/**/*", "src/shared/**/*", "src/preload/**/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "types": ["electron-vite/node"],
    "paths": {
      "@/shared/*": ["src/shared/*"],
      "@/main/*": ["src/main/*"],
      "@/preload/*": ["src/preload/*"]
    },
    "ignoreDeprecations": "6.0"
  }
}
