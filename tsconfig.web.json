{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": ["src/renderer/**/*", "src/shared/**/*", "src/preload/*.d.ts", "src/shared/**/*.ts"],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/shared/*": ["src/shared/*"],
      "@/renderer/*": ["src/renderer/*"],
      "@/hooks/*": ["src/renderer/hooks/*"],
      "@/components/*": ["src/renderer/components/*"],
      "@/ui/*": ["src/renderer/components/ui/*"],
      "@/providers/*": ["src/renderer/app/providers/*"],
      "@/features/*": ["src/renderer/features/*"],
      "@/assets/*": ["src/renderer/assets/*"],
      "@/lib/*": ["src/renderer/lib/*"],
      "@/videos/*": ["src/renderer/features/videos/*"],
      "@/history/*": ["src/renderer/features/history/*"],
      "@/settings/*": ["src/renderer/features/settings/*"]
    }
  }
}
